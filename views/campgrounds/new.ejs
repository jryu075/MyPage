<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1>Add a new item</h1>
        <h4>All fields are required except description</h4>

        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input class="form-control" type ="text" name="name" placeholder="name" required>
            </div>
            <div class="form-group">
                <input class="form-control" type ="text" name="image" placeholder="image url" required>
            </div>
            <div class="form-group">
                <input class="form-control" type ="text" name="description" placeholder="description (optional)">
            </div>
            <div class="form-group">
                <input class="form-control" type ="number" min="0" name="price" placeholder="price per item" required>
            </div>
            <div class="form-group">
                <p>Is this awesome?</p>
                <input class="form-control" type ="checkbox" name="isAwesome">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-default btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds">Go back</a>
    </div>
</div>

<% include ../partials/footer %>