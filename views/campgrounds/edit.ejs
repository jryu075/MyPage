<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1>Edit <%= campground.name %></h1>
        <h4>All fields are required except for description</h4>

        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type ="text" name="campground[name]" value="<% campground.name %>" requried placeholder = "name">
            </div>
            <div class="form-group">
                <input class="form-control" type ="text" name="campground[image]" value="<% campground.image %>"required placeholder = "image url">
            </div>
            <div class="form-group">
                <input class="form-control" type ="text" name="campground[description]" value="<% campground.description %>" placeholder = "description (optional)">
            </div>            
            <div class="form-group">
                <input class="form-control" type ="number" min = "0" step = "0.01" name="campground[price]" value="<% campground.price %>" required placeholder = "price per unit">
            </div>           
            <div class="form-group">
                <button class="btn btn-lg btn-default btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds">Go back.</a>
    </div>
</div>

<% include ../partials/footer %>