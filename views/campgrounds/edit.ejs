<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1>Edit <%= campground.name %></h1>
        <h4>All fields are required except for description</h4>

        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type ="text" name="campground[name]" value="<% campground.name %>" requried>
            </div>
            <div class="form-group">
                <input class="form-control" type ="text" name="campground[image]" value="<% campground.image %>"required>
            </div>
            <div class="form-group">
                <input class="form-control" type ="text" name="campground[description]" value="<% campground.description %>">
            </div>            
            <div class="form-group">
                <input class="form-control" type ="number" min = "0" name="campground[price]" value="<% campground.price %>" required>
            </div>           
            <div class="form-group">
                <p>Is this awesome?</p>
                <input class="form-control" type ="checkbox" name="campground[isAwesome]" value="<% campground.isAwesome %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-default btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds">Go back.</a>
    </div>
</div>

<% include ../partials/footer %>